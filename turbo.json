{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "globalEnv": [
    "VITE_XION_OAUTH2_SERVER_URL",
    "NEXT_PUBLIC_XION_OAUTH2_SERVER_URL",
    "XION_OAUTH2_CLIENT_ID",
    "XION_OAUTH2_CLIENT_SECRET"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [".env.production.local", ".env.local", ".env.production", ".env"]
    },
    "lint": {},
    "check-types": {},
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ]
    },
    "preview": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "cache": false
    },
    "format:check": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
